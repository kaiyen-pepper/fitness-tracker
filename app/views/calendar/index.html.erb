<div class="min-h-screen bg-gradient-to-br from-blue-50 to-green-100 p-6 flex flex-col items-center space-y-8">

  <!-- Title -->
  <h1 class="text-4xl font-bold text-blue-800 text-center">Workout Calendar</h1>

  <!-- Calendar Container -->
  <div class="class=text-xs sm:text-sm md:text-base">

    <%= month_calendar events: @workouts, attribute: :date do |date, workouts| %>
      <div class="h-36 p-2 border border-gray-200 rounded-lg overflow-y-auto">
        <div class="text-sm font-bold text-gray-800 mb-1"><%= date.day %></div>
        <% workouts.each do |workout| %>
          <div class="mb-1 bg-green-100 text-green-900 text-xs px-2 py-1 rounded-md shadow-sm truncate">
            <%= workout.workout_type.capitalize %>
          </div>
        <% end %>
      </div>

  <% end %>

  </div>

  <!-- Back Button -->
  <%= link_to "Back to Main", root_path,
      class: "block w-40 text-center bg-yellow-200 text-black py-2 rounded-full shadow hover:bg-yellow-300 transition" %>
</div>
